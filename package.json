    "@types/atom": "^1.40.5",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@types/node": "14.14.6",
    "@types/sinon": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "chai": "^4.2.0",
    "eslint": "^7.12.1",
    "mocha": "^8.2.0",
    "mocha-appveyor-reporter": "^0.4.2",
    "sinon": "^9.2.1",
    "typescript": "~4.0.5"
